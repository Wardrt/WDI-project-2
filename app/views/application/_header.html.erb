<header>
  <div class="contained-to-grid sticky">
    <nav class="top-bar" data-topbar role="navigation">
      <ul class="title-area">
        <li class="name">
          <h1><a href="/">My Site</a></h1>
        </li>
        <!-- Remove the class "menu-icon" to get rid of menu icon. Take out "Menu" to just have icon alone -->
        <li class="toggle-topbar menu-icon"><a href=""><span>Menu</span></a></li>
      </ul>

      <section class="top-bar-section">
        <!-- Right Nav Section -->
        <ul class="right">
          <% if current_user %>
            <% if current_user.username == nil %>
            <li class="name"><h1><a href="/users/<%= current_user.id %>"><%= current_user.email %></a></h1></li>
          <% else %>
            <li class="name"><h1><%= current_user.username %></h1></li>
          <% end %>
            <li class="has-dropdown">
              <a href="">Profile</a>
              <ul class="dropdown">
                <li><a href="/users/<%= current_user.id %>">View Profile</a></li>
                <li><a href="/users/<%= current_user.id %>/edit">Edit Profile</a></li>
                <li class="divider"></li>
                <li><%= link_to "Log out", destroy_user_session_path, method: :delete %></li>
              </ul>
          </li>
          <% else %>
          <li><%= link_to "Sign In", new_user_session_path %></li>
          <li><%= link_to "Register", new_user_registration_path %></li>
          <% end %>

        </ul>

        <!-- Left Nav Section -->
        <ul class="left">
          <li><a href="/podcasts">Podcasts</a></li>
        </ul>
      </section>
    </nav>
  </div>
</header>

