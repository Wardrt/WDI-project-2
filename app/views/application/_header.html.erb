<header>
  <div class="contained-to-grid sticky">
    <nav class="top-bar header-background-color" data-topbar role="navigation">
      <ul class="title-area">
        <li class="name header-background-color">
          <h1><a href="/" class="logo-name"><img src="/images/logo.png" class="logo">Podable</a></h1>
        </li>
        <!-- Remove the class "menu-icon" to get rid of menu icon. Take out "Menu" to just have icon alone -->
        <li class="toggle-topbar menu-icon"><a href="#"><span></span></a></li>
      </ul>

      <section class="top-bar-section">
        <!-- Right Nav Section -->
        <ul class="right header-background-color">
          <% if current_user %>
            <% if (current_user.username == nil) || (current_user.username == "") %>
              <li class="name"><h1 class="header-background-color"><a href="/users/<%= current_user.id %>" style="background-color: #008CBA;"><%= current_user.email %></a></h1></li>
            <% else %>
              <li class="name"><h1 class="header-background-color"><a href="/users/<%= current_user.id %>" style="background-color: #008CBA;"><%= current_user.username %></a></h1></li>
            <% end %>
            <li class="has-dropdown">
              <a href="#" class="header-background-color" style="background-color: #008CBA;">Profile</a>
              <ul class="dropdown">
                <li><a href="/users/<%= current_user.id %>" class="header-background-color" style="background-color: #008CBA;">View Profile</a></li>
                <li><a href="/users/<%= current_user.id %>/edit" class="header-background-color" style="background-color: #008CBA;">Edit Profile</a></li>
                <li class="divider"></li>
                <li><%= link_to "Log out", destroy_user_session_path, method: :delete, class: "header-background-color", style: "background-color: #008CBA;" %></li>
              </ul>
            </li>
          <% else %>
            <li><%= link_to "Sign In", new_user_session_path, class: "header-background-color", style: "background-color: #008CBA;" %></li>
            <li><%= link_to "Register", new_user_registration_path, class: "header-background-color", style: "background-color: #008CBA;" %></li>
          <% end %>

        </ul>

        <!-- Left Nav Section -->
        <ul class="left header-background-color">
          <li><a href="/podcasts" class="header-background-color" style="background-color: #008CBA;">Podcasts</a></li>
        </ul>
      </section>
    </nav>
  </div>
</header>

