<div class="medium-4 columns" data-equalizer-watch>
  <div class="image-wrapper overlay-slide-in-left">
    <img src="<%= podcast.image %>">
    <div class="image-overlay-content">
      <h2><%= podcast.podcaster %></h2>
      <p><%= podcast.title %></p>
      <a href="/podcasts/<%= podcast.id %>/episodes" class="button">View Podcast</a>
      <% if user_signed_in? %>
        <% if podcast.users.include? current_user %>
          <%= button_to "Unfollow", destroy_follow_path(podcast.id), method: :delete, class: "button" %>
        <% else %>
          <%= button_to "Follow", create_follow_path(podcast_id: podcast.id, id: current_user.id), class: "button" %>
        <% end %>
      <% end %>
    </div>
  </div>
</div>
