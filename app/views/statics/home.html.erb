<div id="landing-page-first">
  <img src="/images/microphone-background.jpeg">
</div>
<div id="landing-page-second" data-equalizer>
  <div class="medium-12" data-equalizer-watch>
    <div class="img-wrapper">
      <a class="button expand view-podcast" href="/podcasts/<%= @podcast.id %>">View Podcast</a>
      <img src="<%= @podcast.image %>">
    </div>
  </div>
  <div id="landing-page-last">
    <h3>Podable is an online database of podcasts! Search for your favourite podcast and interact with others in the comments!</h3>
  </div>
</div>
