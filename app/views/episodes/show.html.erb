<div class="row">
  <div class="small-6 small-centered columns">
    <div class="service">
      <div class="service-icon-box">
        <img src="<%= @podcast.image %>" alt="" class="service-icon">
      </div>
      <h4 class="service-heading"><%= @episode.title %></h4>
      <p class="service-description"><%= @episode.description %></p>
    </div>
  </div>
</div>
<iframe width="100%" height="150" scrolling="no" frameborder="no" src="https://w.soundcloud.com/player/?url=https%3A//api.soundcloud.com/tracks/<%= @episode.url %>&amp;auto_play=false&amp;hide_related=false&amp;show_comments=false&amp;show_user=true&amp;show_reposts=false&amp;visual=false"></iframe>
<% if user_signed_in? %>
  <%= render partial: 'comments/form', locals: { commentable: @episode } %>
<% end %>
<div class="row">
  <div class="large-8 small-12 columns"> 
    <%= render partial: 'comments/comment', collection: @comments, locals: { commentable: @episode } %>
  </div>
</div>




