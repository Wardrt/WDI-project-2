<div class="comment">
  <section class="top">
    <h6 class="byline">
      <% if comment.user.username == nil %>
        <a href="/users/<%= comment.user_id %>">
          <% if comment.user.image == nil %>
            <i class="icon"></i>
          <% else %>
            <img src="<%= comment.user.image %>">
          <% end %>
        <%= comment.user.email %></a>
      <% else %>
        <a href="/users/<%= comment.user.id %>">
          <% if comment.user.image == nil %>
            <i class="icon"></i>
          <% else %>
            <img src="<%= comment.user.image %>">
          <% end %>
        <%= comment.user.username %></a>
      <% end %>
      <small>
        <span class="data">
          Added <%= distance_of_time_in_words(Time.now, comment.created_at) %> ago
        </span>
      </small>
    </h6>
  </section>
  <section class="content">
    <p><%= comment.comment %></p>
  </section>
</div>
<hr>
