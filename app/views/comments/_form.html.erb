<%= form_for(:comment, url: podcast_episode_comments_path(commentable_type: commentable.class.to_s.underscore, commentable_id: commentable.id, episode_id: @episode.id)) do |f| %>

  <%= f.text_area :comment, placeholder: "Write a Comment", class: "medium-10 column" %>
  <%= f.submit "Comment!", class: "medium-2 column button", style: "height: 50px;" %>

<% end %>